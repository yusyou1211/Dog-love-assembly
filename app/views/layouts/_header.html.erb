<header class="shadow-sm sticky-top">
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
      <%= link_to root_path do %>
        <%= image_tag 'Dogs-logo.PNG', style: "width: 70px; margin-right: 10px;" %>
      <% end %>
      <%= flash[:notice] %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <!--会員ログイン時-->
          <% if member_signed_in? %>
            <li class="nav-item">
              <%= link_to members_path, class: 'nav-link text-dark' do %>
                <%= image_tag 'Dogs-logo2.PNG', style: "width: 20px;" %>会員一覧
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_post_path, class: 'nav-link text-dark' do %>
                <%= image_tag 'Dogs-logo2.PNG', style: "width: 20px;" %>投稿する
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to posts_path, class: 'nav-link text-dark' do %>
                <%= image_tag 'Dogs-logo2.PNG', style: "width: 20px;" %>みんなの投稿
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to rooms_path, class: 'nav-link text-dark' do %>
                <%= image_tag 'Dogs-logo2.PNG', style: "width: 20px;" %>チャット
              <% end %>
            </li>

            <li class="nav-item">
              <%= link_to notifications_path, class: 'nav-link text-dark' do %>
                <% if unchecked_notifications.any? %>
                  <i class="fa fa-circle" style="color: red; width: 10px; vertical-align: top;"></i>
                <% end %>
                <%= image_tag 'Dogs-logo2.PNG', style: "width: 20px;" %>通知
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to destroy_member_session_path, method: :delete, class: 'nav-link text-dark' do %>
                <%= image_tag 'Dogs-logo2.PNG', style: "width: 20px;" %>ログアウト
              <% end %>
            </li>
            <li class="nav-item profile_image">
              <%= link_to member_path(current_member), class: 'nav-link text-dark' do %>
                <%= image_tag current_member.get_profile_image %>
              <% end %>
            </li>
          <% else %>
            <!--会員ログアウト時-->
            <li class="nav-item">
              <%= link_to homes_about_path, class: 'nav-link text-dark' do %>
                <%= image_tag 'Dogs-logo2.PNG', style: "width: 20px;" %>Dogsって？
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_member_registration_path, class: 'nav-link text-dark' do %>
                <%= image_tag 'Dogs-logo2.PNG', style: "width: 20px;" %>新規会員登録
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_member_session_path, class: 'nav-link text-dark' do %>
                <%= image_tag 'Dogs-logo2.PNG', style: "width: 20px;" %>会員ログイン
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to members_guest_sign_in_path, class: 'nav-link text-dark', method: :post do %>
                <%= image_tag 'Dogs-logo2.PNG', style: "width: 20px;" %>ゲストログイン
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to admin_session_path, class: 'nav-link text-dark', method: :post do %>
                <%= image_tag 'Dogs-logo2.PNG', style: "width: 20px;" %>管理者ログイン
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>