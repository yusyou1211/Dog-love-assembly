<div class="container">
  <div class="row">
    <div class="mx-auto col-10">
      <h2>プロフィールを編集</h2>
      <%= flash[:danger] %>
      <%= form_with model: @member, url: member_path, method: :patch, local: true do |f| %>
        <div class="form-group">
          <%= image_tag 'Dogs-logo2.PNG', style: "width: 20px;" %>
          <%= f.label :name, "ニックネーム" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= image_tag 'Dogs-logo2.PNG', style: "width: 20px;" %>
          <%= f.label :profile_image, "プロフィール画像" %>
          <%= f.file_field :profile_image, class: "form-control-file", accept: 'profile_image/*' %>
        </div>
        <div class="form-group">
          <%= image_tag 'Dogs-logo2.PNG', style: "width: 20px;" %>
          <%= f.label :introduction, "自己紹介" %>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "編集する", class: 'btn btn-outline-secondary' %>
        </div>
        <div>
          <%= link_to "退会する", confirm_path, class: 'btn btn-outline-danger' %>
        </div>
      <% end %>
    </div>
  </div>
</div>