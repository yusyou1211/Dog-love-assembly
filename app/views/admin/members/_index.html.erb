<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">ニックネーム</th>
      <th scope="col">自己紹介</th>
      <th scope="col">退会ステータス</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @members.each do |member| %>
    <tr>
      <td class="profile_image">
        <%= link_to admin_member_path(member.id) do %>
          <%= image_tag member.get_profile_image %>
        <% end %>
      </td>
      <td><%= member.name %></td>
      <td><%= truncate(member.introduction, length: 30) %></td>  <!--15字まで表示-->
      <td>
        <% if member.is_deleted == false %>
          <strong class="text-success"><%= "有効" %></strong>
        <% else %>
          <strong class= "text-secondary"><%= "退会" %></strong>
        <% end %>
      </td>
      <td>
        <%= link_to edit_admin_member_path(member.id), class: "btn btn-outline-secondary" do %>
          <i class="fas fa-user-edit"></i>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>