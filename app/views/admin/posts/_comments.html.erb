<% post.comments.each do |comment| %>
  <table class="mx-auto">
    <th class="profile_image">
      <%= link_to admin_member_path(comment.member.id) do %>
        <%= image_tag comment.member.get_profile_image, size: "40x40" %>
      <% end %>
    </th>
    <th width="400">
      <%= comment.comment %>
    </th>
    <th>
      <%= link_to admin_post_comment_path(post, comment), method: :delete, data: { confirm: "本当に消しますか？" } do %>
        <i class="fas fa-trash-alt"></i>
      <% end %>
    </th>
  </table>
<% end %>